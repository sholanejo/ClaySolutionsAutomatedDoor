{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost; Port=3306; Database=ClaySolutionsAutomatedDoor; Uid=root; Pwd=Admin"
  },
  "BearerTokenConfiguration": {
    "Key": "A very very very long jwt secret key used for automated doors",
    "Issuer": "https://localhost:7149",
    "Audience": "claysolutions"
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "pathFormat": "logs\\log.txt",
          "path": "./Logs/log-.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}",
          "rollingInterval": "Hour"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      {
        "Name": "WithSensitiveDataMasking",
        "Args": {
          "options": {
            "MaskingOperators": [
              { "Type": "PasswordMaskingOperator" },
              { "Type": "PinMaskingOperator" }
            ],
            "MaskProperties": [
              "password"
            ],
            "MaskValue": "*******"
          }
        }
      }
    ],
    "Properties": {
      "ApplicationName": "ClaySolutionsAutomatedDoor"
    }
  },
  "AllowedHosts": "*"
}
